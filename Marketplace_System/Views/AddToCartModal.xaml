<Window x:Class="Marketplace_System.Views.AddToCartModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Added to Cart"
        Width="430"
        Height="380"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F3F8F4"
        WindowStyle="ToolWindow"
        ShowInTaskbar="False">

    <Border Margin="12"
            Background="White"
            CornerRadius="18"
            Padding="20"
            BorderBrush="#DCEAE3"
            BorderThickness="1">
        <StackPanel>
            <TextBlock Text="Added to Cart"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#1F4E3D"
                       Margin="0,0,0,6"/>

            <TextBlock Text="The item has been added successfully."
                       Foreground="#6B7280"
                       Margin="0,0,0,16"/>

            <Border Background="#F3F8F4"
                    CornerRadius="12"
                    Padding="14"
                    Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock x:Name="ProductNameText"
                               FontSize="17"
                               FontWeight="SemiBold"
                               Foreground="#1F2937"/>
                    <TextBlock x:Name="PriceText"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="#2E7D5B"
                               Margin="0,6,0,0"/>
                    <TextBlock x:Name="StockText"
                               Foreground="#6B7280"
                               Margin="0,4,0,0"/>
                    <TextBlock x:Name="SellerText"
                               Foreground="#374151"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="💬 Message Seller"
                        Click="MessageSellerButton_Click"
                        Padding="12,6"
                        Margin="0,0,8,0"
                        Background="#E6F4EC"
                        Foreground="#1F4E3D"
                        BorderBrush="#CDE9DA"
                        BorderThickness="1"
                        FontWeight="SemiBold"/>

                <Button Content="Continue Shopping"
                        Click="CloseButton_Click"
                        Padding="12,6"
                        Background="#2E7D5B"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="SemiBold"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
