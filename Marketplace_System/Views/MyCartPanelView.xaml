<UserControl x:Class="Marketplace_System.Views.MyCartPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F3F8F4">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="My Cart" FontSize="28" FontWeight="SemiBold" Foreground="#1F4E3D"/>
            <TextBlock Text="Review your selected produce before checkout." Margin="0,6,0,18" Foreground="#5F6B6A"/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <Border Background="White" CornerRadius="16" Padding="16" Margin="0,0,0,10" BorderBrush="#DCEAE3" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Fresh Asparagus" FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock Text="1 kilo" Margin="0,4,0,0" Foreground="#5F6B6A"/>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="₱210" VerticalAlignment="Center" FontWeight="Bold" Foreground="#2E7D5B"/>
                </Grid>
            </Border>

            <Border Background="White" CornerRadius="16" Padding="16" Margin="0,0,0,10" BorderBrush="#DCEAE3" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Fresh Potatoes" FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock Text="2 kilos" Margin="0,4,0,0" Foreground="#5F6B6A"/>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="₱300" VerticalAlignment="Center" FontWeight="Bold" Foreground="#2E7D5B"/>
                </Grid>
            </Border>
        </StackPanel>

        <Border Grid.Row="2" Background="White" CornerRadius="16" Padding="16" BorderBrush="#DCEAE3" BorderThickness="1" Margin="0,12,0,0">
            <DockPanel LastChildFill="False">
                <StackPanel DockPanel.Dock="Left">
                    <TextBlock Text="Total" Foreground="#5F6B6A"/>
                    <TextBlock Text="₱510" FontSize="24" FontWeight="Bold" Foreground="#1F4E3D"/>
                </StackPanel>
                <Button Content="Proceed to Checkout" DockPanel.Dock="Right" Background="#2E7D5B" Foreground="White" BorderThickness="0" Padding="18,10" FontWeight="SemiBold" Cursor="Hand"/>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>