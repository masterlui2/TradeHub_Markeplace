<Window x:Class="Marketplace_System.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Marketplace System - Login" 
        Height="550" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- Main container with glass morphism effect -->
    <Grid>
        <!-- Background blur effect -->
        <Border Background="#0F172A" Opacity="0.9">
            <Border.Effect>
                <BlurEffect Radius="20"/>
            </Border.Effect>
        </Border>

        <!-- Main content container -->
        <Grid Margin="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left side - Brand/Info section -->
            <Border Grid.Column="0"
                    CornerRadius="20"
                    Margin="0,0,20,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#3B82F6" Offset="0"/>
                        <GradientStop Color="#8B5CF6" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <StackPanel VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Margin="40">
                        <!-- Logo/Icon -->
                        <Viewbox Width="80" Height="80" Margin="0,0,0,20">
                            <Grid>
                                <Ellipse Fill="White" Opacity="0.2" Width="80" Height="80"/>
                                <Path Data="M20,40 Q40,20 60,40 T100,40" 
                                      Stroke="White" 
                                      StrokeThickness="3"
                                      StrokeLineJoin="Round"
                                      StrokeEndLineCap="Round"/>
                                <Ellipse Fill="White" Width="12" Height="12" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center"/>
                            </Grid>
                        </Viewbox>

                        <TextBlock Text="MARKETPLACE PRO" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Your Ultimate Marketplace Solution" 
                                   FontSize="14" 
                                   Foreground="White"
                                   Opacity="0.9"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   MaxWidth="250"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right side - Login form -->
            <Border Grid.Column="1"
                    Background="#FFFFFF"
                    CornerRadius="20"
                    Width="400">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="40" 
                                      ShadowDepth="8" 
                                      Opacity="0.2"
                                      Direction="270"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Window controls -->
                    <StackPanel Grid.Row="0" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right"
                                Margin="20,20,20,0">
                        <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                Click="MinimizeWindow_Click"
                                ToolTip="Minimize">
                            <TextBlock Text="─" FontSize="14" Margin="0,-2,0,0"/>
                        </Button>
                        <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                Click="CloseWindow_Click"
                                ToolTip="Close"
                                Margin="10,0,0,0">
                            <TextBlock Text="✕" FontSize="12"/>
                        </Button>
                    </StackPanel>

                    <!-- Login form -->
                    <StackPanel Grid.Row="1" 
                                VerticalAlignment="Center"
                                Margin="40,0">
                        <TextBlock Text="Welcome Back" 
                                   FontSize="24" 
                                   FontWeight="SemiBold"
                                   Foreground="#1F2937"
                                   Margin="0,0,0,5"/>

                        <TextBlock Text="Sign in to continue to your account" 
                                   FontSize="14" 
                                   Foreground="#6B7280"
                                   Margin="0,0,0,30"/>

                        <!-- Username field -->
                        <Border Background="#F3F4F6" 
                                CornerRadius="10"
                                Margin="0,0,0,20"
                                Height="50">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Simple user icon -->
                                <TextBlock Text="👤" 
                                           FontSize="16"
                                           VerticalAlignment="Center"
                                           Margin="15,0"/>

                                <TextBox x:Name="txtUsername"
                                         Grid.Column="1"
                                         FontSize="14"
                                         Padding="10,12"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         Foreground="#333333"/>
                            </Grid>
                        </Border>

                        <!-- Password field -->
                        <Border Background="#F3F4F6" 
                                CornerRadius="10"
                                Margin="0,0,0,25"
                                Height="50">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Simple lock icon -->
                                <TextBlock Text="🔒" 
                                           FontSize="16"
                                           VerticalAlignment="Center"
                                           Margin="15,0"/>

                                <PasswordBox x:Name="txtPassword"
                                             Grid.Column="1"
                                             FontSize="14"
                                             Padding="10,12"
                                             BorderThickness="0"
                                             Background="Transparent"
                                             Foreground="#333333"/>

                                <Button x:Name="btnShowPassword"
                                        Grid.Column="2"
                                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="👁️" FontSize="14"/>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Remember me & Forgot password -->
                        <Grid Margin="0,0,0,30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox x:Name="chkRememberMe"
                                      Content="Remember me"
                                      Foreground="#6B7280"
                                      VerticalAlignment="Center"/>

                            <Button x:Name="btnForgotPassword"
                                    Grid.Column="1"
                                    Content="Forgot password?"
                                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                    Foreground="#3B82F6"
                                    FontWeight="SemiBold"
                                    Click="btnForgotPassword_Click"/>
                        </Grid>

                        <!-- Login button -->
                        <Button x:Name="btnLogin"
                                Content="SIGN IN"
                                Height="48"
                                Foreground="White"
                                FontWeight="Bold"
                                FontSize="14"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="btnLogin_Click">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#3B82F6" Offset="0"/>
                                    <GradientStop Color="#8B5CF6" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="15" 
                                                  ShadowDepth="0" 
                                                  Opacity="0.3"
                                                  Color="#3B82F6"/>
                            </Button.Effect>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="10">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#2563EB" Offset="0"/>
                                                        <GradientStop Color="#7C3AED" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Cursor" Value="Hand"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#1D4ED8" Offset="0"/>
                                                        <GradientStop Color="#6D28D9" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Alternative login options -->
                        <TextBlock Text="Or sign in with" 
                                   HorizontalAlignment="Center"
                                   Foreground="#6B7280"
                                   Margin="0,30,0,15"/>

                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,30">
                            <Button Width="40" 
                                    Height="40" 
                                    Margin="0,0,10,0"
                                    BorderBrush="#E5E7EB"
                                    BorderThickness="1">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="20">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <TextBlock Text="G" FontWeight="Bold"/>
                            </Button>
                            <Button Width="40" 
                                    Height="40" 
                                    Margin="10,0"
                                    BorderBrush="#E5E7EB"
                                    BorderThickness="1">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="20">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <TextBlock Text="M" FontWeight="Bold"/>
                            </Button>
                            <Button Width="40" 
                                    Height="40" 
                                    Margin="10,0,0,0"
                                    BorderBrush="#E5E7EB"
                                    BorderThickness="1">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="20">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <TextBlock Text="A" FontWeight="Bold"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <!-- Register link -->
                    <Border Grid.Row="2"
                            Background="#F9FAFB"
                            CornerRadius="0,0,20,20"
                            Height="60">
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <TextBlock Text="Don't have an account?" 
                                       Foreground="#6B7280"/>
                            <Button x:Name="linkRegister"
                                    Content=" Create account"
                                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                    Foreground="#3B82F6"
                                    FontWeight="SemiBold"
                                    Click="linkRegister_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>