<Window x:Class="Marketplace_System.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Marketplace System - Login"
        Height="550" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Grid>
        <!-- Background blur effect -->
        <Border Background="#0B1F17" Opacity="1">

            <Border.Effect>
                <BlurEffect Radius="20"/>
            </Border.Effect>
        </Border>

        <!-- Main content container -->
        <Grid Margin="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left side - Brand/Info section -->
            <Border Grid.Column="0"
                    CornerRadius="15"
                    Margin="0,0,20,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#EFF6FF" Offset="0"/>
                        <GradientStop Color="#DBEAFE" Offset="0.5"/>
                        <GradientStop Color="#FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center" Height="423">
                        <Image Source="pack://application:,,,/Images/logo2.png"
       Width="721"
       Height="414"
       Stretch="Uniform"
       Margin="0,0,0,18"
       RenderOptions.BitmapScalingMode="HighQuality"
       HorizontalAlignment="Center"/>

                        <!-- Logo (make sure new.png is inside /Images and Build Action = Resource) -->
                        <!-- Logo (make sure new.png is inside /Images and Build Action = Resource) -->

                        <!-- Logo (make sure new.png is inside /Images and Build Action = Resource) -->





                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right side - Login form -->
            <Border Grid.Column="1"
                    Background="#FFFFFF"
                    CornerRadius="20"
                    Width="400">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="40"
                                      ShadowDepth="8"
                                      Opacity="0.2"
                                      Direction="270"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Window controls -->
                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="20,20,20,0">
                        <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                Click="MinimizeWindow_Click"
                                ToolTip="Minimize">
                            <TextBlock Text="─" FontSize="14" Margin="0,-2,0,0"/>
                        </Button>
                        <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                Click="CloseWindow_Click"
                                ToolTip="Close"
                                Margin="10,0,0,0">
                            <TextBlock Text="✕" FontSize="12"/>
                        </Button>
                    </StackPanel>

                    <!-- Login form -->
                    <StackPanel Grid.Row="1"
                                VerticalAlignment="Center"
                                Margin="40,0">

                        <TextBlock Text="Welcome Back"
                                   FontSize="24"
                                   FontWeight="SemiBold"
                                   Foreground="#1F2937"
                                   Margin="0,0,0,5"/>

                        <TextBlock Text="Sign in to continue to your account"
                                   FontSize="14"
                                   Foreground="#6B7280"
                                   Margin="0,0,0,30"/>

                        <!-- Username field -->
                        <Border Background="#F3F4F6"
                                CornerRadius="10"
                                Margin="0,0,0,20"
                                Height="50">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="👤"
                                           FontSize="16"
                                           VerticalAlignment="Center"
                                           Margin="15,0"/>

                                <TextBox x:Name="txtUsername"
                                         Grid.Column="1"
                                         FontSize="14"
                                         Padding="10,12"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         Foreground="#333333"/>
                            </Grid>
                        </Border>

                        <!-- Password field -->
                        <Border Background="#F3F4F6"
                                CornerRadius="10"
                                Margin="0,0,0,25"
                                Height="50">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="🔒"
                                           FontSize="16"
                                           VerticalAlignment="Center"
                                           Margin="15,0"/>

                                <PasswordBox x:Name="txtPassword"
                                             Grid.Column="1"
                                             FontSize="14"
                                             Padding="10,12"
                                             BorderThickness="0"
                                             Background="Transparent"
                                             Foreground="#333333"/>

                                <Button x:Name="btnShowPassword"
                                        Grid.Column="2"
                                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="👁️" FontSize="14"/>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Login button -->
                        <Button x:Name="btnLogin"
                                Content="SIGN IN"
                                Height="48"
                                Foreground="White"
                                FontWeight="Bold"
                                FontSize="14"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="btnLogin_Click">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#16A34A" Offset="0"/>
                                    <GradientStop Color="#0D9488" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="10">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </StackPanel>

                    <!-- Register link -->
                    <Border Grid.Row="2"
                            Background="#F9FAFB"
                            CornerRadius="0,0,20,20"
                            Height="60">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" Height="23" Width="228">
                            <TextBlock Text="Don't have an account?"
                                       Foreground="#6B7280" Height="14" Width="130"/>
                            <Button x:Name="linkRegister"
                                    Content=" Create account"
                                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                    Foreground="#0B1F17"
                                    FontWeight="SemiBold"
                                    Click="linkRegister_Click"
                                    Height="19"
                                    Width="91" RenderTransformOrigin="0.5,0.5">
                                <Button.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="-0.228"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Button.RenderTransform>
                            </Button>
                        </StackPanel>
                    </Border>

                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
