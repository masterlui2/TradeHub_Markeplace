<UserControl x:Class="Marketplace_System.Views.InboxPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <Grid Margin="0,0,0,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="White"
                CornerRadius="18"
                Padding="20"
                BorderBrush="#DCEAE3"
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Inbox"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#1F4E3D"
                           Margin="0,0,0,14"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <Border Background="#E6F4EC" CornerRadius="14" Padding="14,7" Margin="0,0,10,0">
                        <TextBlock Text="Selling" FontWeight="SemiBold" Foreground="#2E7D5B"/>
                    </Border>
                    <Border Background="#F3F8F4" CornerRadius="14" Padding="14,7">
                        <TextBlock Text="Buying" FontWeight="SemiBold" Foreground="#4B5563"/>
                    </Border>
                </StackPanel>

                <TextBlock Text="Filter by label"
                           FontSize="15"
                           Foreground="#374151"
                           Margin="0,0,0,10"/>

                <WrapPanel>
                    <Border Background="#E6F4EC" CornerRadius="14" Padding="12,6" Margin="0,0,8,8">
                        <TextBlock Text="All" Foreground="#2E7D5B" FontWeight="SemiBold"/>
                    </Border>
                    <Border Background="#F3F8F4" CornerRadius="14" Padding="12,6" Margin="0,0,8,8">
                        <TextBlock Text="Pending payment"/>
                    </Border>
                    <Border Background="#F3F8F4" CornerRadius="14" Padding="12,6" Margin="0,0,8,8">
                        <TextBlock Text="Paid"/>
                    </Border>
                    <Border Background="#F3F8F4" CornerRadius="14" Padding="12,6" Margin="0,0,8,8">
                        <TextBlock Text="To be shipped"/>
                    </Border>
                    <Border Background="#F3F8F4" CornerRadius="14" Padding="12,6" Margin="0,0,8,8">
                        <TextBlock Text="Shipped"/>
                    </Border>
                    <Border Background="#F3F8F4" CornerRadius="14" Padding="12,6" Margin="0,0,8,8">
                        <TextBlock Text="Cash on delivery"/>
                    </Border>
                    <Border Background="#F3F8F4" CornerRadius="14" Padding="12,6" Margin="0,0,8,8">
                        <TextBlock Text="Completed"/>
                    </Border>
                </WrapPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="2"
                Background="White"
                CornerRadius="18"
                BorderBrush="#DCEAE3"
                BorderThickness="1"
                Padding="20">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock Text="✈"
                           FontSize="72"
                           Foreground="#9CA3AF"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="No chats"
                           FontSize="42"
                           FontWeight="Bold"
                           Foreground="#4B5563"
                           HorizontalAlignment="Center"
                           Margin="0,12,0,0"/>
                <TextBlock Text="Conversations from buyers and sellers will appear here."
                           Foreground="#6B7280"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>