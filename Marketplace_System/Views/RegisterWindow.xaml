<Window x:Class="Marketplace_System.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Marketplace System - Register"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Grid>
        <!-- Background Image -->
        <Image Source="pack://application:,,,/Images/farm_background.png"
               Stretch="UniformToFill"/>

        <!-- Dark Overlay -->
        <Border Background="#0B1F17" Opacity="0.42"/>

        <!-- Register Card -->
        <Border Background="White"
                CornerRadius="20"
                Width="614"
                Height="424"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="35" ShadowDepth="6" Opacity="0.2"/>
            </Border.Effect>

            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Create Your Account"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="#1F2937"/>
                    <TextBlock Text="Fill in your details to get started"
                               FontSize="13"
                               Foreground="#6B7280"/>
                </StackPanel>

                <!-- Form -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Full Name" 
                                   Foreground="#6B7280" 
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="txtName"
                                 Height="40"
                                 Padding="10"
                                 Margin="0,0,0,12"/>

                        <TextBlock Text="Email Address" 
                                   Foreground="#6B7280" 
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="txtEmail"
                                 Height="40"
                                 Padding="10"
                                 Margin="0,0,0,12"/>

                        <TextBlock Text="Password" 
                                   Foreground="#6B7280" 
                                   Margin="0,0,0,4"/>
                        <PasswordBox x:Name="txtPassword"
                            Height="40"
                            Padding="10"/>
                    </StackPanel>

                    <!-- Right Column -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Mobile Number" 
                                   Foreground="#6B7280" 
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="txtMobile"
                                 Height="40"
                                 Padding="10"
                                 Margin="0,0,0,12"/>

                        <TextBlock Text="City" 
                                   Foreground="#6B7280" 
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="txtCity"
                                 Height="40"
                                 Padding="10"
                                 Margin="0,0,0,12"/>
                    </StackPanel>
                </Grid>

                <!-- Footer -->
                <StackPanel Grid.Row="2" Margin="0,20,0,0">
                    <Button Content="CREATE ACCOUNT"
                            Height="44"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Cursor="Hand"
                            Click="btnRegister_Click">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#16A34A" Offset="0"/>
                                <GradientStop Color="#0D9488" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,12,0,0">
                        <TextBlock Text="Already have an account?"
                                   Foreground="#6B7280"/>
                        <Button Content=" Sign in"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="#0B1F17"
                                FontWeight="SemiBold"
                                Click="linkLogin_Click"
                                Padding="4,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>