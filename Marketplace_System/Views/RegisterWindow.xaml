<Window x:Class="Marketplace_System.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Marketplace System - Register" 
        Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- Main container with glass morphism effect -->
    <Grid>
        <!-- Background blur effect -->
        <Border Background="#0F172A" Opacity="0.9">
            <Border.Effect>
                <BlurEffect Radius="20"/>
            </Border.Effect>
        </Border>

        <!-- Main content container -->
        <Grid Margin="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left side - Brand/Info section -->
            <Border Grid.Column="0"
                    CornerRadius="20"
                    Margin="0,0,20,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#EFF6FF" Offset="0"/>
                        <GradientStop Color="#DBEAFE" Offset="0.5"/>
                        <GradientStop Color="#FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel VerticalAlignment="Center"
                         HorizontalAlignment="Center" Height="423">
                    <Image Source="pack://application:,,,/Images/reg.png"
                        Width="721"
                        Height="414"
                        Stretch="Uniform"
                        Margin="0,0,0,18"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Right side - Register form -->
            <Border Grid.Column="1"
                    Background="#FFFFFF"
                    CornerRadius="20"
                    Width="420">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="40" 
                                      ShadowDepth="8" 
                                      Opacity="0.2"
                                      Direction="270"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Window controls -->
                    <StackPanel Grid.Row="0" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right"
                                Margin="20,20,20,0">
                        <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                Click="MinimizeWindow_Click"
                                ToolTip="Minimize">
                            <TextBlock Text="─" FontSize="14" Margin="0,-2,0,0"/>
                        </Button>
                        <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                Click="CloseWindow_Click"
                                ToolTip="Close"
                                Margin="10,0,0,0">
                            <TextBlock Text="✕" FontSize="12"/>
                        </Button>
                    </StackPanel>

                    <!-- Register form -->
                    <StackPanel Grid.Row="1" 
                                VerticalAlignment="Center"
                                Margin="40,0">
                        <TextBlock Text="Create Account" 
                                   FontSize="24" 
                                   FontWeight="SemiBold"
                                   Foreground="#1F2937"
                                   Margin="0,0,0,5"/>

                        <TextBlock Text="Join the marketplace in seconds" 
                                   FontSize="14" 
                                   Foreground="#6B7280"
                                   Margin="0,0,0,25"/>

                        <!-- Username field -->
                        <Border Background="#F3F4F6" 
                                CornerRadius="10"
                                Margin="0,0,0,15"
                                Height="50">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="👤" 
                                           FontSize="16"
                                           VerticalAlignment="Center"
                                           Margin="15,0"/>

                                <TextBox x:Name="txtUsername"
                                         Grid.Column="1"
                                         FontSize="14"
                                         Padding="10,12"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         Foreground="#333333"/>
                            </Grid>
                        </Border>

                        <!-- Email field -->
                        <Border Background="#F3F4F6" 
                                CornerRadius="10"
                                Margin="0,0,0,15"
                                Height="50">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="✉" 
                                           FontSize="16"
                                           VerticalAlignment="Center"
                                           Margin="15,0"/>

                                <TextBox x:Name="txtEmail"
                                         Grid.Column="1"
                                         FontSize="14"
                                         Padding="10,12"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         Foreground="#333333"/>
                            </Grid>
                        </Border>

                        <!-- Password field -->
                        <Border Background="#F3F4F6" 
                                CornerRadius="10"
                                Margin="0,0,0,15"
                                Height="50">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="🔒" 
                                           FontSize="16"
                                           VerticalAlignment="Center"
                                           Margin="15,0"/>

                                <PasswordBox x:Name="txtPassword"
                                             Grid.Column="1"
                                             FontSize="14"
                                             Padding="10,12"
                                             BorderThickness="0"
                                             Background="Transparent"
                                             Foreground="#333333"/>
                            </Grid>
                        </Border>

                        <!-- Confirm Password field -->
                        <Border Background="#F3F4F6" 
                                CornerRadius="10"
                                Margin="0,0,0,15"
                                Height="50">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="✅" 
                                           FontSize="16"
                                           VerticalAlignment="Center"
                                           Margin="15,0"/>

                                <PasswordBox x:Name="txtConfirmPassword"
                                             Grid.Column="1"
                                             FontSize="14"
                                             Padding="10,12"
                                             BorderThickness="0"
                                             Background="Transparent"
                                             Foreground="#333333"/>
                            </Grid>
                        </Border>

                        <!-- Role field -->

                        <!-- Register button -->
                        <Button x:Name="btnRegister"
                                Content="CREATE ACCOUNT"
                                Height="48"
                                Foreground="White"
                                FontWeight="Bold"
                                FontSize="14"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="btnRegister_Click">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#3B82F6" Offset="0"/>
                                    <GradientStop Color="#8B5CF6" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="15" 
                                                  ShadowDepth="0" 
                                                  Opacity="0.3"
                                                  Color="#3B82F6"/>
                            </Button.Effect>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="10">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#2563EB" Offset="0"/>
                                                        <GradientStop Color="#7C3AED" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Cursor" Value="Hand"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#1D4ED8" Offset="0"/>
                                                        <GradientStop Color="#6D28D9" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- Login link -->
                    <Border Grid.Row="2"
                            Background="#F9FAFB"
                            CornerRadius="0,0,20,20"
                            Height="60">
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <TextBlock Text="Already have an account?" 
                                       Foreground="#6B7280" Height="15" Width="136"/>
                            <Button x:Name="linkLogin"
                                    Content=" Sign in"
                                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                    Foreground="#3B82F6"
                                    FontWeight="SemiBold"
                                    Click="linkLogin_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
