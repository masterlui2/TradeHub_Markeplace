<Window x:Class="Marketplace_System.Views.CreateListingModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Listing"
        Width="760"
        Height="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F3F8F4"
        WindowStyle="ToolWindow"
        ShowInTaskbar="False">

    <Border Margin="14"
            Background="White"
            CornerRadius="18"
            BorderBrush="#DCEAE3"
            BorderThickness="1"
            Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Create New Farm Listing"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#1F4E3D"/>

            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
                <StackPanel>
                    <Border Background="#F3F8F4" CornerRadius="12" Padding="14" Margin="0,0,0,14">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="54" Height="54" Fill="#CFEDE1"/>
                            <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Juan Dela Cruz" FontWeight="Bold" FontSize="15"/>
                                <TextBlock Text="Davao City • Verified Seller" Foreground="#6B7280"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="Product Name" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox x:Name="ProductNameTextBox" Height="36" Margin="0,0,0,10"/>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Price per Kilo (₱)" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <TextBox x:Name="PricePerKiloTextBox" Height="36"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Available Kilos" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <TextBox x:Name="AvailableKilosTextBox" Height="36"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Pickup Address" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox x:Name="PickupAddressTextBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"/>

                    <TextBlock Text="Product Image" FontWeight="SemiBold" Margin="0,0,0,6"/>
                    <Border BorderBrush="#D1D5DB"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="12"
                            Background="#FAFAFA">
                        <StackPanel>
                            <Border Height="190" CornerRadius="10" Background="#EEF2F7" ClipToBounds="True">
                                <Image x:Name="ProductPreviewImage"
                                       Stretch="UniformToFill"
                                       Source="/Images/new.png"/>
                            </Border>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                <Button Content="Upload Image"
                                        Click="UploadImageButton_Click"
                                        Padding="12,6"
                                        Background="#E6F4EC"
                                        BorderBrush="#CDE9DA"
                                        BorderThickness="1"
                                        FontWeight="SemiBold"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                <Button Content="Cancel"
                        Click="CancelButton_Click"
                        Padding="14,7"
                        Margin="0,0,8,0"
                        Background="#E5E7EB"
                        Foreground="#111827"
                        BorderThickness="0"/>
                <Button Content="Publish Listing"
                        Click="PublishListingButton_Click"
                        Padding="14,7"
                        Background="#2E7D5B"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
