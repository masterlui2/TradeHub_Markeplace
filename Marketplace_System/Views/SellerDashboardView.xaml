<UserControl x:Class="Marketplace_System.Views.SellerDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">

        <StackPanel Margin="0,0,10,0">

            <!-- ================= OVERVIEW ================= -->
            <Border Background="White"
                    CornerRadius="18"
                    Padding="20"
                    BorderBrush="#DCEAE3"
                    BorderThickness="1"
                    Margin="0,0,0,20">

                <StackPanel>

                    <TextBlock Text="Seller Overview"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#1F4E3D"
                               Margin="0,0,0,16"/>

                    <UniformGrid Columns="2">

                        <!-- Chats -->
                        <Border Background="#F3F8F4"
                                CornerRadius="14"
                                Padding="16"
                                Margin="0,0,10,0">

                            <StackPanel>
                                <TextBlock Text="7"
                                           FontSize="28"
                                           FontWeight="Bold"
                                           Foreground="#2E7D5B"/>
                                <TextBlock Text="Chats to Answer"
                                           FontSize="14"
                                           Foreground="#374151"/>
                            </StackPanel>
                        </Border>

                        <!-- Rating -->
                        <Border Background="#F3F8F4"
                                CornerRadius="14"
                                Padding="16"
                                Margin="10,0,0,0">

                            <StackPanel>
                                <TextBlock Text="0 ★"
                                           FontSize="28"
                                           FontWeight="Bold"
                                           Foreground="#2E7D5B"/>
                                <TextBlock Text="Seller Rating"
                                           FontSize="14"
                                           Foreground="#374151"/>
                                <TextBlock Text="0 Reviews"
                                           FontSize="12"
                                           Foreground="Gray"/>
                            </StackPanel>
                        </Border>

                    </UniformGrid>
                </StackPanel>
            </Border>


            <!-- ================= YOUR LISTINGS ================= -->
            <Border Background="White"
                    CornerRadius="18"
                    Padding="20"
                    BorderBrush="#DCEAE3"
                    BorderThickness="1">

                <StackPanel>

                    <!-- Header -->
                    <DockPanel Margin="0,0,0,16">

                        <TextBlock Text="Your Listings"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="#1F4E3D"
                                   DockPanel.Dock="Left"/>

                        <Button Content="Create Listing"
                                Padding="10,6"
                                Background="#2E7D5B"
                                Foreground="White"
                                BorderThickness="0"
                                FontWeight="SemiBold"
                                HorizontalAlignment="Right"
                                />
                    </DockPanel>

                    <!-- Listing Stats -->
                    <UniformGrid Columns="3">

                        <Border Background="#F3F8F4"
                                CornerRadius="14"
                                Padding="16"
                                Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="0"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="#2E7D5B"/>
                                <TextBlock Text="Active"
                                           FontSize="14"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#F3F8F4"
                                CornerRadius="14"
                                Padding="16"
                                Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="0"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="#2E7D5B"/>
                                <TextBlock Text="Sold"
                                           FontSize="14"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#F3F8F4"
                                CornerRadius="14"
                                Padding="16">
                            <StackPanel>
                                <TextBlock Text="0"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="#2E7D5B"/>
                                <TextBlock Text="Drafts"
                                           FontSize="14"/>
                            </StackPanel>
                        </Border>

                    </UniformGrid>

                    <TextBlock Text="See all listings"
                               Foreground="#2E7D5B"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Margin="0,18,0,0"/>

                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
