<UserControl x:Class="Marketplace_System.Views.SellerDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Border Background="White"
            CornerRadius="18"
            Padding="24"
            BorderBrush="#DCEAE3"
            BorderThickness="1">
        <StackPanel>
            <TextBlock Text="Seller Dashboard"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#1F4E3D"/>
            <TextBlock Text="Manage your produce listings and monitor orders from one place."
                       Margin="0,6,0,20"
                       Foreground="#4A5F56"/>

            <UniformGrid Columns="3" Margin="0,0,0,20">
                <Border Background="#E6F4EC" CornerRadius="12" Padding="16" Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="Active Listings" FontWeight="SemiBold" Foreground="#1F4E3D"/>
                        <TextBlock Text="12" FontSize="24" FontWeight="Bold" Foreground="#2E7D5B"/>
                    </StackPanel>
                </Border>
                <Border Background="#F3F8F4" CornerRadius="12" Padding="16" Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="Pending Orders" FontWeight="SemiBold" Foreground="#1F4E3D"/>
                        <TextBlock Text="4" FontSize="24" FontWeight="Bold" Foreground="#2E7D5B"/>
                    </StackPanel>
                </Border>
                <Border Background="#F3F8F4" CornerRadius="12" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Revenue (Today)" FontWeight="SemiBold" Foreground="#1F4E3D"/>
                        <TextBlock Text="₱3,240" FontSize="24" FontWeight="Bold" Foreground="#2E7D5B"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <TextBlock Text="Quick Actions"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Create Listing"
                        Padding="12,6"
                        Margin="0,0,10,0"
                        Background="#2E7D5B"
                        Foreground="White"
                        BorderThickness="0"/>
                <Button Content="Manage Orders"
                        Padding="12,6"
                        Background="#E6F4EC"
                        Foreground="#1F4E3D"
                        BorderBrush="#CDE9DA"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>