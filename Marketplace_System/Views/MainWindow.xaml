<Window x:Class="Marketplace_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Marketplace_System.Views"
        Title="FarmHub - Buyer Dashboard"
        Width="1200"
        Height="800"
        Background="#F3F8F4"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
        Background="#A8D5BA"
        Padding="20 15 0 15">
            <!-- Remove right padding to allow profile to be at edge -->
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Logo -->
                    <ColumnDefinition Width="*"/>
                    <!-- Centered Navigation -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Profile at far right -->
                </Grid.ColumnDefinitions>

                <!-- LOGO – left, untouched -->
                <Image Source="pack://application:,,,/Images/logo2.png"
               Stretch="Uniform"
               Grid.Column="0"
               Margin="-30,-28,898,-34" Grid.ColumnSpan="2"/>
                <!-- Optional right margin to separate from nav -->

                <!-- NAVIGATION LINKS – centered in remaining space -->
                <!-- NAVIGATION CONTAINER -->
                <Border Grid.Column="1"
        Background="#E8F6ED"
        CornerRadius="20"
        Padding="14,8"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        BorderBrush="#CDE9DA"
        BorderThickness="1">

                    <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center">

                        <TextBlock Text="Home"
                   Margin="12,0"
                   FontWeight="SemiBold"
                   Foreground="#1F4E3D"
                   VerticalAlignment="Center"/>

                        <TextBlock Text="My Orders"
                   Margin="12,0"
                   FontWeight="SemiBold"
                   Foreground="#1F4E3D"
                   VerticalAlignment="Center"/>

                        <TextBlock Text="Wishlist"
                   Margin="12,0"
                   FontWeight="SemiBold"
                   Foreground="#1F4E3D"
                   VerticalAlignment="Center"/>

                        <TextBlock Text="Cart"
                   Margin="12,0"
                   FontWeight="SemiBold"
                   Foreground="#1F4E3D"
                   VerticalAlignment="Center"/>

                    </StackPanel>
                </Border>


                <!-- PROFILE DROPDOWN – at very right corner -->
                <Menu Grid.Column="2"
              Background="Transparent"
              VerticalAlignment="Center"
              HorizontalAlignment="Right">
                    <MenuItem Background="Transparent" BorderThickness="0" Width="78">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="38" Height="38" CornerRadius="19" Background="White">
                                    <TextBlock Text="👤" FontSize="20" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" Foreground="#2E7D5B" RenderTransformOrigin="-0.119,0.449"/>
                                </Border>
                                <Path Data="M0,0 L6,6 L12,0" Fill="White" VerticalAlignment="Center"
                              Margin="8,0,0,0" Width="12" Height="6" Stretch="Uniform"/>
                            </StackPanel>
                        </MenuItem.Header>
                        <MenuItem.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.MenuBrushKey}" Color="White"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.MenuTextBrushKey}" Color="#1F4E3D"/>
                        </MenuItem.Resources>
                        <MenuItem Header="My Profile"/>
                        <MenuItem Header="Settings"/>
                        <Separator/>
                        <MenuItem Header="Logout"/>
                    </MenuItem>
                </Menu>
            </Grid>
        </Border>

        <!-- ========== MAIN CONTENT ========== -->
        <Grid Grid.Row="1" Margin="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ===== LEFT SIDEBAR (FarmHub Style) ===== -->
            <ContentControl x:Name="SidebarHost" Grid.Column="0">
                <ContentControl.Content>
                    <Border Background="White"
                            CornerRadius="18"
                            Padding="15"
                            Margin="0,0,20,0">

                        <StackPanel>

                            <!-- BROWSE MARKET -->
                            <Border Background="#E6F4EC"
                                    CornerRadius="12"
                                    Padding="10"
                                    Margin="0,0,0,8">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="32" Height="32"
                                             Fill="#2E7D5B"
                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="Browse Produce"
                                               FontWeight="SemiBold"
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <!-- MY ORDERS -->
                            <Border Padding="10"
                              CornerRadius="12"
                              Margin="0,0,0,8">
                              <StackPanel Orientation="Horizontal">
                              <Ellipse Width="32" Height="32"
                               Fill="#F0F3F2"
                               VerticalAlignment="Center"/>
                              <TextBlock Text="Inbox"
                             Margin="12,0,0,0"
                             VerticalAlignment="Center"/>
                                        </StackPanel>
                            </Border>
                            <!-- MY ORDERS -->
                            <Border Padding="10"
                                    CornerRadius="12"
                                    Margin="0,0,0,8">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="32" Height="32"
                                             Fill="#F0F3F2"
                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="My Orders"
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- CART -->
                            <Border Padding="10"
                                    CornerRadius="12"
                                    Margin="0,0,0,8">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="32" Height="32"
                                             Fill="#F0F3F2"
                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="My Cart"
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                        
                            <!-- SELL SECTION -->
                            <Separator Margin="0,15"/>

                            <TextBlock Text="Seller Tools"
                                       FontWeight="Bold"
                                       Foreground="#1F4E3D"
                                       Margin="0,0,0,10"/>

                            <!-- CREATE LISTING -->
                            <Border Background="#E6F4EC"
                                    CornerRadius="12"
                                    Padding="10"
                                    Margin="0,0,0,8">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="32" Height="32"
                                             Fill="#2E7D5B"
                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="Create Listing"
                                               FontWeight="SemiBold"
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- MANAGE LISTINGS -->
                            <Button x:Name="SellingNavButton"
                                    Click="SellingNavButton_Click"
                                    Padding="10"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    HorizontalContentAlignment="Stretch"
                                    Cursor="Hand">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="32" Height="32"
                                             Fill="#F0F3F2"
                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="Selling"
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Separator Margin="0,20"/>

                            <TextBlock Text="Categories"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Margin="0,0,0,12"/>

                            <Border Padding="8" CornerRadius="10" Margin="0,0,0,8">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="30" Height="30" Fill="#F0F3F2"/>
                                    <TextBlock Text="Vegetables"
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Padding="8" CornerRadius="10" Margin="0,0,0,8">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="30" Height="30" Fill="#F0F3F2"/>
                                    <TextBlock Text="Fruits"
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Padding="8" CornerRadius="10" Margin="0,0,0,8">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="30" Height="30" Fill="#F0F3F2"/>
                                    <TextBlock Text="Leafy Greens"
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Padding="8" CornerRadius="10" Margin="0,0,0,8">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="30" Height="30" Fill="#F0F3F2"/>
                                    <TextBlock Text="Root Crops"
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Padding="8" CornerRadius="10" Margin="0,0,0,8">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="30" Height="30" Fill="#F0F3F2"/>
                                    <TextBlock Text="Milk &amp; Eggs"
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Padding="8" CornerRadius="10">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="30" Height="30" Fill="#F0F3F2"/>
                                    <TextBlock Text="Organic Products"
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </ContentControl.Content>
            </ContentControl>

            <!-- ===== PRODUCT GRID – EXACTLY 3 CARDS PER ROW ===== -->
            <ContentControl x:Name="MainContentHost" Grid.Column="1">
                <ContentControl.Content>
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  RenderTransformOrigin="0.59,0.538">

                        <!-- UniformGrid with Columns="3" forces 3 cards per row -->
                        <UniformGrid Columns="3"
                             Margin="0,0,0,10" Width="930">

                            <!-- Card 1: Asparagus -->

                            <!-- Card 2: Carrots -->
                            <!-- PRODUCT CARD -->
                            <Border
        Margin="32,0,-5,0"
        Background="White"
        CornerRadius="18"
        Padding="12"
        BorderBrush="#DCEAE3"
        BorderThickness="1">

                                <StackPanel>

                                    <!-- PRODUCT IMAGE -->
                                    <Border Height="150"
        Background="#F3F8F4"
        CornerRadius="12"
        ClipToBounds="True">

                                        <Image Source="/Images/carrot.jpg"
           Stretch="UniformToFill"/>
                                    </Border>


                                    <!-- PRODUCT NAME -->
                                    <TextBlock Text="Fresh Carrots"
                   FontSize="15"
                   FontWeight="SemiBold"
                   Margin="0,12,0,2"/>

                                    <!-- PRICE -->
                                    <TextBlock Text="₱210 per kilo"
                   FontSize="13"
                   Foreground="#2E7D5B"
                   FontWeight="Bold"/>

                                    <!-- IMPORTANT INFO -->
                                    <TextBlock Text="Approx. 12 pcs • In Stock"
                   FontSize="11"
                   Foreground="Gray"
                   Margin="0,4,0,8"/>

                                    <Separator Margin="0,6"/>

                                    <!-- SELLER INFO SECTION -->
                                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">

                                        <!-- PROFILE CIRCLE -->
                                        <Ellipse Width="32"
                     Height="32"
                     Fill="#CFEDE1"/>

                                        <StackPanel Margin="8,0,0,0">
                                            <TextBlock Text="Juan Dela Cruz"
                           FontSize="12"
                           FontWeight="SemiBold"/>
                                            <TextBlock Text="Davao City"
                           FontSize="11"
                           Foreground="Gray"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- ACTION BUTTON -->
                                    <Button Content="Add to Cart"
                Margin="0,10,0,0"
                Background="#2E7D5B"
                Foreground="White"
                BorderThickness="0"
                Padding="6"/>
                                </StackPanel>
                            </Border>

                            <Border
                        Margin="32,0,13,0"
                        Background="White"
                        CornerRadius="18"
                        Padding="12"
                        BorderBrush="#DCEAE3"
                        BorderThickness="1">

                                <StackPanel>

                                    <!-- PRODUCT IMAGE -->
                                    <Border Height="150"
                                Background="#F3F8F4"
                                CornerRadius="12"
                                ClipToBounds="True">

                                        <Image Source="/Images/asp.jpg"
                                    Stretch="UniformToFill"/>
                                    </Border>


                                    <!-- PRODUCT NAME -->
                                    <TextBlock Text="Fresh Asparagus"
                                FontSize="15"
                                FontWeight="SemiBold"
                                Margin="0,12,0,2"/>

                                    <!-- PRICE -->
                                    <TextBlock Text="₱210 per kilo"
                                FontSize="13"
                                Foreground="#2E7D5B"
                                FontWeight="Bold"/>

                                    <!-- IMPORTANT INFO -->
                                    <TextBlock Text="Approx. 12 pcs • In Stock"
                                FontSize="11"
                                Foreground="Gray"
                                Margin="0,4,0,8"/>

                                    <Separator Margin="0,6"/>

                                    <!-- SELLER INFO SECTION -->
                                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">

                                        <!-- PROFILE CIRCLE -->
                                        <Ellipse Width="32"
                                    Height="32"
                                    Fill="#CFEDE1"/>

                                        <StackPanel Margin="8,0,0,0">
                                            <TextBlock Text="Juan Dela Cruz"
                                        FontSize="12"
                                        FontWeight="SemiBold"/>
                                            <TextBlock Text="Davao City"
                                        FontSize="11"
                                        Foreground="Gray"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- ACTION BUTTON -->
                                    <Button Content="Add to Cart"
                                Margin="0,10,0,0"
                                Background="#2E7D5B"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="6"/>
                                </StackPanel>
                            </Border>
                            <Border
Margin="11,0,37,0"
Background="White"
CornerRadius="18"
Padding="12"
BorderBrush="#DCEAE3"
BorderThickness="1">

                                <StackPanel>

                                    <!-- PRODUCT IMAGE -->
                                    <Border Height="150"
                            Background="#F3F8F4"
                            CornerRadius="12"
                            ClipToBounds="True">

                                        <Image Source="/Images/potato.jpg"
                        Stretch="UniformToFill"/>
                                    </Border>


                                    <!-- PRODUCT NAME -->
                                    <TextBlock Text="Fresh Potatoes"
           FontSize="15"
           FontWeight="SemiBold"
           Margin="0,12,0,2"/>

                                    <!-- PRICE -->
                                    <TextBlock Text="₱210 per kilo"
           FontSize="13"
           Foreground="#2E7D5B"
           FontWeight="Bold"/>

                                    <!-- IMPORTANT INFO -->
                                    <TextBlock Text="Approx. 12 pcs • In Stock"
           FontSize="11"
           Foreground="Gray"
           Margin="0,4,0,8"/>

                                    <Separator Margin="0,6"/>

                                    <!-- SELLER INFO SECTION -->
                                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">

                                        <!-- PROFILE CIRCLE -->
                                        <Ellipse Width="32"
             Height="32"
             Fill="#CFEDE1"/>

                                        <StackPanel Margin="8,0,0,0">
                                            <TextBlock Text="Juan Dela Cruz"
                   FontSize="12"
                   FontWeight="SemiBold"/>
                                            <TextBlock Text="Davao City"
                   FontSize="11"
                   Foreground="Gray"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- ACTION BUTTON -->
                                    <Button Content="Add to Cart"
        Margin="0,10,0,0"
        Background="#2E7D5B"
        Foreground="White"
        BorderThickness="0"
        Padding="6"/>
                                </StackPanel>
                            </Border>

                            <!-- Card 3: Beets -->

                            <Border
Margin="32,0,-5,0"
Background="White"
CornerRadius="18"
Padding="12"
BorderBrush="#DCEAE3"
BorderThickness="1" Height="316">

                                <StackPanel>

                                    <!-- PRODUCT IMAGE -->
                                    <Border Height="150"
                            Background="#F3F8F4"
                            CornerRadius="12"
                            ClipToBounds="True">

                                        <Image Source="/Images/beets.jpg"
                            Stretch="UniformToFill"/>
                                    </Border>


                                    <!-- PRODUCT NAME -->
                                    <TextBlock Text="Fresh Beets"
           FontSize="15"
           FontWeight="SemiBold"
           Margin="0,12,0,2"/>

                                    <!-- PRICE -->
                                    <TextBlock Text="₱210 per kilo"
           FontSize="13"
           Foreground="#2E7D5B"
           FontWeight="Bold"/>

                                    <!-- IMPORTANT INFO -->
                                    <TextBlock Text="Approx. 12 pcs • In Stock"
           FontSize="11"
           Foreground="Gray"
           Margin="0,4,0,8"/>
                                    <Separator Margin="0,6"/>

                                    <!-- SELLER INFO SECTION -->
                                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">

                                        <!-- PROFILE CIRCLE -->
                                        <Ellipse Width="32"
             Height="32"
             Fill="#CFEDE1"/>

                                        <StackPanel Margin="8,0,0,0">
                                            <TextBlock Text="Juan Dela Cruz"
                   FontSize="12"
                   FontWeight="SemiBold"/>
                                            <TextBlock Text="Davao City"
                   FontSize="11"
                   Foreground="Gray"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- ACTION BUTTON -->
                                    <Button Content="Add to Cart"
        Margin="0,10,0,0"
        Background="#2E7D5B"
        Foreground="White"
        BorderThickness="0"
        Padding="6"/>
                                </StackPanel>
                            </Border>
                        </UniformGrid>
                    </ScrollViewer>
                </ContentControl.Content>
            </ContentControl>

     
    </Grid>
        <Border
            Background="White"
            CornerRadius="20"
            Padding="10,6"
            Margin="897,0,0,0"
            VerticalAlignment="Center"
            BorderBrush="#DCEAE3"
            BorderThickness="1"
            MaxWidth="350" HorizontalAlignment="Left" Width="186">

            <DockPanel>

                <TextBlock Text="🔍"
                    VerticalAlignment="Center"
                    Margin="0,0,8,0"
                    Foreground="#7C8A84"/>

                <TextBox BorderThickness="0"
                    Background="Transparent"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Foreground="#1F4E3D"
                    Text="Search products..."/>
            </DockPanel>
        </Border>
    </Grid>
</Window>