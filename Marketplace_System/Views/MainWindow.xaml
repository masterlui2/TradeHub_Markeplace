<Window x:Class="Marketplace_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FarmHub - Buyer Dashboard"
        Width="1200"
        Height="800"
        Background="#F3F8F4"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
        Background="#A8D5BA"
        Padding="20 15 0 15">
            <!-- Remove right padding to allow profile to be at edge -->
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Logo -->
                    <ColumnDefinition Width="*"/>
                    <!-- Centered Navigation -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Profile at far right -->
                </Grid.ColumnDefinitions>

                <!-- LOGO – left, untouched -->
                <Image Source="pack://application:,,,/Images/logo2.png"
               Stretch="Uniform"
               Grid.Column="0"
               Margin="0,-21,935,-27" Grid.ColumnSpan="2"/>
                <!-- Optional right margin to separate from nav -->

                <!-- NAVIGATION LINKS – centered in remaining space -->
                <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" Height="228" Width="315" RenderTransformOrigin="0.983,0.547">
                    <TextBlock Text="Home" Margin="0,0,25,0" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="My Orders" Margin="0,0,25,0" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="Messages" Margin="0,0,25,0" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="Wishlist" Margin="0,0,25,0" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="Cart" Margin="0,0,25,0" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- PROFILE DROPDOWN – at very right corner -->
                <Menu Grid.Column="2"
              Background="Transparent"
              VerticalAlignment="Center"
              HorizontalAlignment="Right">
                    <MenuItem Background="Transparent" BorderThickness="0" Width="67">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="38" Height="38" CornerRadius="19" Background="White">
                                    <TextBlock Text="👤" FontSize="20" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" Foreground="#2E7D5B" RenderTransformOrigin="-0.119,0.449"/>
                                </Border>
                                <Path Data="M0,0 L6,6 L12,0" Fill="White" VerticalAlignment="Center"
                              Margin="8,0,0,0" Width="12" Height="6" Stretch="Uniform"/>
                            </StackPanel>
                        </MenuItem.Header>
                        <MenuItem.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.MenuBrushKey}" Color="White"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.MenuTextBrushKey}" Color="#1F4E3D"/>
                        </MenuItem.Resources>
                        <MenuItem Header="My Profile"/>
                        <MenuItem Header="Settings"/>
                        <Separator/>
                        <MenuItem Header="Logout"/>
                    </MenuItem>
                </Menu>
            </Grid>
        </Border>

        <!-- ========== MAIN CONTENT ========== -->
        <Grid Grid.Row="1" Margin="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ===== LEFT CATEGORIES (unchanged) ===== -->
            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="15"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Categories"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#1F4E3D"
                               Margin="0,0,0,15"/>
                    <CheckBox Content="Carrots" Margin="0,6"/>
                    <CheckBox Content="Beets" Margin="0,6"/>
                    <CheckBox Content="Radishes" Margin="0,6"/>
                    <CheckBox Content="Potatoes" Margin="0,6"/>
                    <Separator Margin="0,15"/>
                    <CheckBox Content="Lettuce" Margin="0,6"/>
                    <CheckBox Content="Spinach" Margin="0,6"/>
                    <CheckBox Content="Arugula" Margin="0,6"/>
                </StackPanel>
            </Border>

            <!-- ===== PRODUCT GRID – EXACTLY 3 CARDS PER ROW ===== -->
            <ScrollViewer Grid.Column="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled" RenderTransformOrigin="0.59,0.538">

                <!-- UniformGrid with Columns="3" forces 3 cards per row -->
                <UniformGrid Columns="3"
                             Margin="0,0,0,10" Width="930">

                    <!-- Card 1: Asparagus -->

                    <!-- Card 2: Carrots -->
                    <Border Width="287"
                            Margin="10,0,0,0"
                            Background="White"
                            CornerRadius="15"
                            Padding="15"
                            BorderBrush="#DCEAE3"
                            BorderThickness="1"
                            HorizontalAlignment="Left" Height="337">
                        <StackPanel>
                            <Border Height="150" CornerRadius="10" ClipToBounds="True">
                                <Image Source="/Images/asp.jpg" Stretch="UniformToFill"/>
                            </Border>
                            <TextBlock Text="Carrots" Margin="0,10,0,4" FontWeight="SemiBold" FontSize="15"/>
                            <TextBlock Text="₱150 / per kilo" FontSize="12" Foreground="#3F6F5A"/>
                            <Button Content="Add to Cart" Margin="0,10,0,0"
                                    Background="#2E7D5B" Foreground="White"
                                    BorderThickness="0" Padding="8"/>
                        </StackPanel>
                    </Border>
                    <Border Width="279"
                            Margin="18,0,0,0"
                            Background="White"
                            CornerRadius="15"
                            Padding="15"
                            BorderBrush="#DCEAE3"
                            BorderThickness="1"
                            HorizontalAlignment="Left" Height="347">
                        <StackPanel>
                            <Border Height="150" CornerRadius="10" ClipToBounds="True">
                                <Image Source="/Images/asp.jpg" Stretch="UniformToFill"/>
                            </Border>
                            <TextBlock Text="Asparagus" Margin="0,10,0,4" FontWeight="SemiBold" FontSize="15"/>
                            <TextBlock Text="₱210 / per kilo" FontSize="12" Foreground="#3F6F5A"/>
                            <Button Content="Add to Cart" Margin="0,10,0,0"
                                    Background="#2E7D5B" Foreground="White"
                                    BorderThickness="0" Padding="8"/>
                        </StackPanel>
                    </Border>

                    <!-- Card 3: Beets -->

                    <!-- Card 4: Potatoes – automatically goes to second row -->
                    <Border Width="266"
                            Margin="10,10,0,10"
                            Background="White"
                            CornerRadius="15"
                            Padding="15"
                            BorderBrush="#DCEAE3"
                            BorderThickness="1"
                            HorizontalAlignment="Left" Height="337">
                        <StackPanel>
                            <Border Height="150" CornerRadius="10" ClipToBounds="True">
                                <Image Source="/Images/asp.jpg" Stretch="UniformToFill"/>
                            </Border>
                            <TextBlock Text="Potatoes" Margin="0,10,0,4" FontWeight="SemiBold" FontSize="15"/>
                            <TextBlock Text="₱100 / per kilo" FontSize="12" Foreground="#3F6F5A"/>
                            <Button Content="Add to Cart" Margin="0,10,0,0"
                                    Background="#2E7D5B" Foreground="White"
                                    BorderThickness="0" Padding="8"/>
                        </StackPanel>
                    </Border>
                    <Border Width="284"
                            Background="White"
                            CornerRadius="15"
                            Padding="15"
                            BorderBrush="#DCEAE3"
                            BorderThickness="1"
                            HorizontalAlignment="Center">
                        <StackPanel>
                            <Border Height="150" CornerRadius="10" ClipToBounds="True">
                                <Image Source="/Images/asp.jpg" Stretch="UniformToFill"/>
                            </Border>
                            <TextBlock Text="Beets" Margin="0,10,0,4" FontWeight="SemiBold" FontSize="15"/>
                            <TextBlock Text="₱120 / per kilo" FontSize="12" Foreground="#3F6F5A"/>
                            <Button Content="Add to Cart" Margin="0,10,0,0"
                                    Background="#2E7D5B" Foreground="White"
                                    BorderThickness="0" Padding="8"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>